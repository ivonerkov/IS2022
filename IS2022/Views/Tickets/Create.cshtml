@model EShop.Domain.Domain_models.Ticket

@{
    ViewData["Title"] = "Create";
}

<style>

    .container {
        max-width: 1500px;
        margin: auto;
    }
    .content{
        max-width: 700px;
        margin-left: auto;
    }
</style>




<div class="row">
    <div class="content col-lg-7" style="background-color:white;">
        <h4>New lecture</h4>
        <hr />
        <div class="row">
            <div class="col-md-8">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="MovieName" class="control-label"></label>
                        <input asp-for="MovieName" class="form-control" />
                        <span asp-validation-for="MovieName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MovieBillboard" class="control-label"></label>
                        <input asp-for="MovieBillboard" class="form-control" />
                        <span asp-validation-for="MovieBillboard" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MovieGenre" class="control-label"></label>
                        <input asp-for="MovieGenre" class="form-control" />
                        <span asp-validation-for="MovieGenre" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TicketPrice" class="control-label"></label>
                        <input asp-for="TicketPrice" class="form-control" />
                        <span asp-validation-for="TicketPrice" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Rating" class="control-label"></label>
                        <input asp-for="Rating" class="form-control" />
                        <span asp-validation-for="Rating" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-outline-info" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
    <div class="col-lg-5" style="background-color:white;">
        <img style="max-width:600px; max-height:580px;" src="https://static.dezeen.com/uploads/2021/10/dark-and-moody-interiors-lookbook-sq1.jpg" />
    </div>
</div>


    





@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
